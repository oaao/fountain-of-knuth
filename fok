#!/usr/bin/env python
from pathlib import Path
import sys

import fountain


def get_wordlist_path():
	"""Return a custom or default path."""
	try:
		return sys.argv[1]
	except IndexError:
		return 'wordlist.txt'


if __name__ == "__main__":
	
	path = get_wordlist_path()

	WORDLIST = fountain.io.read_file(path)
